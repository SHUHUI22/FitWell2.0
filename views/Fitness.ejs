<!-- Head -->
<%- include("partials/head",{title: "FitWell" , cssFile: "FitnessTracker.css" }) %>

    <!-- Navigation bar -->
    <%- include("partials/nav") %>

    <!-- Contains the web page documentâ€™s main content  -->
    <main id="FitnessTracker">
        <div class="container py-2"> 
            <div class="row">
                <div class="col-md-5 mb-4">
                <!-- Log Workout -->
                    <section id="logWork" class="container">
                    <h2 class="fw-bold mb-4">Log Workout</h2>

                    <form id="logWorkout_form" method="post">
                    <div class="input-log ">
                         <label for="workoutType" >Workout Type</label><br>
                         <select id="workoutType" name="workoutType" required>
                             <option selected ="cycling" value="cycling">Cycling</option>
                             <option value="running">Running</option>
                             <option value="aerobic">Aerobic</option>
                             <option value="yoga">Yoga</option>
                             <option value="zumba">Zumba</option>
                         </select>
                    </div>
                    <div class="input-log">
                         <label for="duration">Duration</label><br>
                         <input id="duration" name="duration" type="number" placeholder="in minutes" required>
                    </div>
                    <div>
                         <label for="date">Date</label><br>
                         <input id="date" name="date" type="datetime-local" required>
                    </div>
                    <div class="input-log">
                        <label for="workoutDetail">Workout Detail</label><br>
                        <input id="workoutDetail" name="detail" type="text" placeholder="Distance (in km)" required>
                    </div>

                    <div>
                         <button id="btn_record" form="logWorkout_form" 
                         class="btn btn-lg px-5 mx-auto d-block border border-2 rounded-pill">
                         Record</button>
                    </div>   
                    </form>
                    </section>

                <div class="col-md-7">
                    <div class="row px-4">
                         <div class="col-md-12">
                             <!-- Today's Summary -->
                             <section id="todaySummary" class="container my-4">
                             <h2 class="fw-bold mb-4">Today's Summary</h2>
                             <div class="summary_content">
                                 
                            <!--Circular Steps Ring-->
                            <div class="streak-container position-relative">
                                <svg class="streak-ring" width="140" height="140">
                                  <circle class="streak-bg" cx="70" cy="70" r="60" 
                                  stroke="#99BC85" stroke-width="12" fill="none"/>
                                  <circle class="streak-progress" cx="70" cy="70" r="60"
                                  stroke="#123524" stroke-width="12" fill="none"
                                  stroke-linecap="round"
                                  stroke-dasharray="376.99" stroke-dashoffset="94.25" />
                                </svg>

                                <!-- Center content -->
                                <div class="streak-content position-absolute top-50 start-50 translate-middle text-center">
                                    <p id="stepCount" class="current-step fw-bold mt-2 mb-1"><%= steps || 0 %></p>
                                    <large class="large text-muted mt-1">steps</large>
                                    <div class="step-goal text-muted mb-2" id="goalValue">Goal : <%= stepGoal || 10000 %></div>
                                </div>
                            </div>    
                                  
                            <div class="d-flex flex-column mt-2 pe-5 me-4">                      
                                <div class="row-md-4">
                                    <div class="summary-icon mb-3">
                                        <i class="fas fa-location-dot me-2"></i> <span><%= distance || '0.0 km' %></span>
                                    </div>
                                </div>
                                <div class="row-md-4">
                                    <div class="summary-icon mb-3">
                                        <i class="fas fa-fire me-1"></i> <span><%= caloriesBurned || '0 kcal' %></span>
                                    </div>
                                </div>
                                <div class="row-md-4">
                                    <div class="summary-icon">
                                        <i class="fas fa-stopwatch me-2"></i> <span><%= duration || '0 min' %></span>
                                    </div>
                                </div>                             
                            </div> 
                            <div class="mt-4">
                                <label for="stepGoal" class="form-label fw-semibold">Daily Step Goal</label>
                                <input id="stepGoal" type="number" class="form-control" placeholder="Enter your step goal (e.g., 10000)" min="1000"/>
                                <button id="btn-set-goal" class="btn btn-lg px-5 mx-auto d-block border border-2 rounded-pill">Set Goal</button>
                            </div>                        
                            </div>
                            </section>

                            <div class="col-md-12 mt-4">
                             <!-- Activity History -->
                            <section id="activityHistory" class="container my-3">
                            <h2 class="fw-bold mb-4">Activity History 
                                <a id="btn-view-more" href="/views/History.ejs" class=" btn-sm text-decoration-none">
                                    <i class="fas fa-chevron-right fs-5"></i>
                                </a></h2>
                            <% if (recentWorkouts && recentWorkouts.length > 0 ) {%>
                                <% recentWorkouts.forEach(workout => { %>
                                <div class="history-item">
                                    <div class="d-flex align-items-center">
                                        <i class="fas <%= workout.icon %> history-icon"></i>
                                        <div><%= workout.date %> <br><%= workout.workoutType %></div>   
                                    </div>
                                </div>
                                <% }) %>
                             <% } else { %>
                                <p>No recent workouts found.</p>
                             <% } %>              
                            
                            </section>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include("partials/footer", {scriptFile:"FitnessTracker_script.js"}) %>